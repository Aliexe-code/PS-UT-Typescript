{
  "compilerOptions": {
    "target": "ES2020",                      // Set the target JavaScript version
    "module": "CommonJS",                    // Set module system for Node.js
    "strict": true,                          // Enable strict mode for better type safety
    "esModuleInterop": true,                 // Ensure compatibility with CommonJS modules
    "skipLibCheck": true,                    // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Ensure consistent file casing
    "outDir": "./dist",                      // Output directory for compiled files
    "rootDir": "./src",                      // Root directory for source files
    "resolveJsonModule": true,               // Allow importing JSON files
    "moduleResolution": "node",              // Use Node.js module resolution strategy
    "declaration": true,                     // Generate type definition files
    "sourceMap": true                        // Generate source maps for easier debugging
  },
  "include": [
    "src/**/*.ts"                            // Include all TypeScript files in the src folder
  ],
  "exclude": [
    "node_modules",                          // Exclude node_modules directory
    "dist"                                   // Exclude dist folder where compiled files will go
  ]
}
